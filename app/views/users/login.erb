<div class="flash">
  <% if flash.has?(:message) %>
    <%= flash[:message] %>
  <% end %>
</div>
  
<h2>Log in</h2>
<form action="/login" method="POST">
  <label>Email:</label>
  <input type="text" name="email" id="email"><br><br>
  <label>Password:</label>
  <input type="password" name="password" id="password"><br><br>
  <input type="submit" value="Log in">
</form><br><br>

